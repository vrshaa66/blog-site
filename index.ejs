
<%- include("partials/header.ejs") %>
  <!DOCTYPE html>
  <html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Blog Site</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
      <link rel="stylesheet" href="/styles.css">
     
  </head>
  <body>
      <h1>Welcome to <strong> The Blog World</strong></h1>
      <button type="button" class="btn btn-outline-primary" onclick="redirectToCreate()">Create Blog</button>
      <button type="button" class="btn btn-outline-primary" onclick="redirectToView()">View Blogs</button>
      <hr>
      <div class="blogs">
        <% if(locals.title && locals.content)
        { %>
              <% blogs.forEach(blog => { %>
              <div class="blog">
                  <h2><%= blog.title %></h2>
                  <p><%= blog.content %></p>
              </div>
          <% }) 
        }%>
        
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
  </html>
  <script>
    function redirectToCreate() {
        window.location.href = "/create";
    }
    function redirectToView() {
        window.location.href = "/view";
    }
</script>

